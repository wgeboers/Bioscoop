@page "/MovieDetails/{Id:int}"
@inherits MovieDetailsBase

@if (Movie == null && ErrorMessage == null)
{
    <DisplaySpinner/> 
}
else if (ErrorMessage != null)
{
    <DisplayError ErrorMessage="@ErrorMessage"></DisplayError>
}
else
{
    <h1 class="mb-5">Movie Details</h1>
    <div class="row">
        <div class="col-md-6 mb-4">
            <img class="img-fluid" src="@Movie.ImageURL">
        </div>
        <div class="col-md-6">
            <h3>@Movie.Title</h3>
            <p class="mb-4">@Movie.Description</p>
            <p class="mb-4">
                <b>
                    Playtime: @Movie.PlayTime minutes 
                    <br>
                    Minimum age: @Movie.MinimumAge 
                </b>
            </p>
            <div>
                <button class="btn btn-success">
                   
                    <b>Add to Cart (doet nog niks)</b>
                </button>
            </div>
        </div>

    </div>
}